# API Configuration
API_HOST=0.0.0.0
API_PORT=5000
API_RELOAD=false
API_WORKERS=1

# Database
DATABASE_URL=sqlite:///data/bitcoin_data.db

# Data Collection
DATA_UPDATE_INTERVAL=30
DATA_SOURCES=["coindesk", "blockchain_info", "coingecko"]

# Strategy Parameters
MA_SHORT_PERIOD=5
MA_LONG_PERIOD=20
RSI_PERIOD=14
RSI_OVERSOLD=30
RSI_OVERBOUGHT=70
BB_PERIOD=20
BB_STD_DEV=2
MACD_FAST=12
MACD_SLOW=26
MACD_SIGNAL=9

# Security
API_KEY=your-secret-api-key-here
CORS_ORIGINS=["http://localhost:3000", "http://localhost:5000"]

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/odin.log

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60

# External APIs
COINDESK_API_URL=https://api.coindesk.com/v1/bpi/currentprice.json
BLOCKCHAIN_API_URL=https://api.blockchain.info/ticker
COINGECKO_API_URL=https://api.coingecko.com/api/v3