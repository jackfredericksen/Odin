# Odin Bitcoin Trading Bot - Environment Configuration

# Application Settings
ODIN_ENV=development
ODIN_HOST=0.0.0.0
ODIN_PORT=8000
ODIN_DEBUG=true
ODIN_SECRET_KEY=your-super-secret-key-change-this-in-production

# Database Configuration
DATABASE_URL=sqlite:///./data/bitcoin_data.db
# For PostgreSQL: postgresql://username:password@localhost/odin_db
# For MySQL: mysql://username:password@localhost/odin_db

# Redis (for caching and WebSocket)
REDIS_URL=redis://localhost:6379/0

# Security
JWT_SECRET_KEY=your-jwt-secret-key-change-this
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Trading Configuration
ENABLE_LIVE_TRADING=false
MAX_POSITION_SIZE=0.95
RISK_PER_TRADE=0.02
MAX_DAILY_LOSS=0.05

# Exchange API Configuration (Binance example)
EXCHANGE_NAME=binance
EXCHANGE_API_KEY=your-exchange-api-key
EXCHANGE_SECRET_KEY=your-exchange-secret-key
EXCHANGE_SANDBOX=true
EXCHANGE_TESTNET=true

# Data Sources
BITCOIN_DATA_SOURCE=coinbase
DATA_UPDATE_INTERVAL=30
PRICE_ALERT_THRESHOLD=1.0

# Logging
LOG_LEVEL=INFO
LOG_FILE=./data/logs/odin.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=8001
HEALTH_CHECK_INTERVAL=60

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30
WS_MAX_CONNECTIONS=100

# Email Notifications (optional)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
NOTIFICATION_EMAIL=alerts@yourdomain.com

# Telegram Bot (optional)
TELEGRAM_BOT_TOKEN=your-telegram-bot-token
TELEGRAM_CHAT_ID=your-telegram-chat-id

# Development/Testing
PYTEST_TIMEOUT=300
TEST_DATABASE_URL=sqlite:///./test_data.db
MOCK_TRADING=true